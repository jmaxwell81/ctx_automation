        <xml><![CDATA[<style>
	.del-group-pane{
		margin-bottom:30px;
	}
	
	.grp-title{
		font-weight:bold;
	}
	.chosen_users{		
		font-size:11px;
	}
	.no-pad-left{
		padding-left:0;
	}
	.icon-info{
		margin-right:5px;
	}
	
</style>
<div class="del-group-pane no-pad-left col-sm-12">
	<!-- DELIVERY GROUPS -->
	<div class="no-pad-left col-xs-12" ng-if="type == 'Delivery Group'">
		<div class="no-pad-left col-xs-12">	
			<p class="grp-title"><a href="#" class="icon-info" ng-click="openApplicationModal(group)"></a>{{group.Name}}, {{group.SiteName}}</p>
			<div id="{{group.Name}}" group-name="{{group.Name}}" site-id="{{group.SiteId}}" applications="{{group.Applications}}" class="group-id-container col-xs-12">
				<a id="{{group.Name}}_lock" href="#" class="btn btn-default btn-ref" ng-click="openUserSelectModal(group.Name)" >
					<span class="icon icon-locked" aria-hidden='true'></span>
				</a>
				<div class="col-xs-12">
					<p class="chosen_users">
						<span id="{{group.Name}}_chosen_users" type="text" members=""></span>
						<a id="{{group.Name}}_more_users" href='#' ng-click='openUserSelectModal(group.Name)'></a>
					</p>
				</div>
			</div>			
		</div>
		
	</div>
	
	<!-- AD GROUPS -->
	<div class="no-pad-left col-xs-12" ng-if="type == 'AD Group'">
		<div class="no-pad-left col-xs-12">	
			<p class="grp-title"><a href="#" class="icon-info" ng-click="openApplicationModal(group)"></a>{{group.Name}}, {{group.SiteName}}</p>
			<div id="{{id}}" group-name="{{adGrp}}" class="group-id-container col-xs-12" ng-repeat="adGrp in group.ADGroups" ng-init="id = group.Name+'_'+adGrp">				
				<div class="col-xs-12">
					<p class="grp-title">{{adGrp}}</p>
					<a id="{{id}}_lock" href="#" class="btn btn-default btn-ref" ng-click="openUserSelectModal(id)">
						<span class="icon icon-locked" aria-hidden='true'></span>
					</a>
				</div>
				<div class="col-xs-12">
					<p class="chosen_users">
						<span id="{{id}}_chosen_users" type="text" members=""></span>
						<a id="{{id}}_more_users" href='#' ng-click='openUserSelectModal(id)'></a>
					</p>
				</div>
			</div>
		</div>		
	</div>
</div>]]></xml>
