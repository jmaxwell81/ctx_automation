        <client_script><![CDATA[
jQuery('.checkbox-label').click(function(){
	
	var checkbox = jQuery(this).prev();
	var value = checkbox.val();
	checkbox.prop( "checked",!checkbox.prop("checked"));
	
	if(!checkbox.hasClass('select-all') && !checkbox.prop("checked")){
		jQuery("input.select-all").prop("checked",false);
	}
	
});

jQuery(".select-all").click(function() {
	var selectall = jQuery(this).prev();
	var value = selectall.prop("checked");
    
    jQuery('.checkbox').each(function(){
		if(!jQuery(this).hasClass('select-all')){
			jQuery(this).prop('checked',value);
		}	  
	});
    
});
]]></client_script>
